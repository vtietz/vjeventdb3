<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Options</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Action</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Listenansicht</numIndex>
										<numIndex index="1">Event->list;Event->show</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Kursleiter</numIndex>
										<numIndex index="1">Performer->list</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Gallery</numIndex>
										<numIndex index="1">Event->gallery;Event->show</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.eventsPerPage>
						<TCEforms>
							<label>Max. number of events to display per page</label>
							<config>
								<type>input</type>
								<size>2</size>
								<eval>int</eval>
								<default>30</default>
							</config>
						</TCEforms>
					</settings.eventsPerPage>
					<settings.hidePastEvents>
						<TCEforms>
							<label>Hide past events</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.hidePastEvents>
					<persistence.storagePid>
						<TCEforms>
							<exclude>1</exclude>
							<label>LLL:EXT:lang/locallang_general.xml:LGL.startingpoint
							</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</persistence.storagePid>
				</el>
			</ROOT>
		</sDEF>
		<sFILTER>
			<ROOT>
				<TCEforms>
					<sheetTitle>Filter</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.eventCategoryFilter>
						<TCEforms>
							<label>LLL:EXT:vjeventdb3/Resources/Private/Language/locallang_db.xlf:tx_vjeventdb3_domain_model_event.event_category</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_vjeventdb3_domain_model_eventcategory</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.eventCategoryFilter>
					<settings.ageCategoryFilter>
						<TCEforms>
							<label>LLL:EXT:vjeventdb3/Resources/Private/Language/locallang_db.xlf:tx_vjeventdb3_domain_model_event.age_category</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_vjeventdb3_domain_model_agecategory</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.ageCategoryFilter>					
				</el>
			</ROOT>
		</sFILTER>		
	</sheets>
</T3DataStructure>